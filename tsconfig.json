{   
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
}